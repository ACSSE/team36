<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/back1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="oasys.za.ac.uj.team36.tests.JobRequestsTradeWorker"
    tools:showIn="@layout/activity_job_requests_trade_worker">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/Deets"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Job Date"
            android:textColor="@color/colorPrimary"
            android:textSize="14pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="10pt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="14pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:textSize="10pt"
            android:text="Job type"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvType"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="10pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:textSize="10pt"
            android:text="Decription "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDecription"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="10pt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Location"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="14pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10pt"
            android:gravity="center_horizontal"
            android:text="Location"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLocation"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="10pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10pt"
            android:gravity="center_horizontal"
            android:text="Area"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvArea"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="10pt"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10pt"
            android:gravity="center_horizontal"
            android:text="Province"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvProv"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="10pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bAcceptJobRequestTW"
            android:layout_width="match_parent"
            android:text="RESPOND TO REQUEST"
            android:textColor="#000000"
            android:background="@color/colorPrimary"
            android:textSize="10pt"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
