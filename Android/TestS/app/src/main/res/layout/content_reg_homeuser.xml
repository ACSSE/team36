<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="oasys.za.ac.uj.team36.tests.regHomeuser"
    tools:showIn="@layout/activity_reg_homeuser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enter your Details:"
            android:textColor="@color/colorPrimary"
            android:textSize="14pt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etName"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:enabled="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="Surname"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/etSurname"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="ID Number"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etID"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="9406055089081" />

        <TextView
            android:layout_width="match_parent"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etUsername"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Email Addres"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="email@you.blah" />
        <TextView
            android:layout_width="match_parent"
            android:text="Phone Number"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etPhone"
            android:inputType="phone"
            android:layout_marginBottom="12dp"
            android:textSize="9pt"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="(+27) 82 456 7891" />

        <TextView
            android:layout_width="match_parent"
            android:text="Home Contact Number"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etHPhone"
            android:inputType="phone"
            android:layout_marginBottom="12dp"
            android:textSize="9pt"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="(+27) 11 458 7891" />

        <TextView
            android:layout_width="match_parent"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enter your Location"
            android:textColor="@color/colorPrimary"
            android:textSize="14pt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:text="Street number"/>

        <EditText
            android:id="@+id/etsNumHU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:inputType="number"
            android:hint="30"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:text="Street Name"/>

        <EditText
            android:id="@+id/etsNameHU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:inputType="text"
            android:hint="5th street"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:text="Sub area"/>

        <EditText
            android:id="@+id/etSubLocalHU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:inputType="text"
            android:hint="Orlando"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:text="Area"/>

        <EditText
            android:id="@+id/etLocalHU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="text"
            android:textSize="9pt"
            android:hint="Soweto"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:text="Area"/>

        <EditText
            android:id="@+id/etAdminAreaHU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="9pt"
            android:inputType="text"
            android:hint="Gauteng"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bRegisterHomeUser"
            android:layout_width="match_parent"
            android:text="Sign Me Up"
            android:textColor="#000000"
            android:background="@color/colorPrimary"
            android:textSize="10pt"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
