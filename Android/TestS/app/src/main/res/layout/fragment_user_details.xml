<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="oasys.za.ac.uj.team36.tests.userDetails">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etName"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:enabled="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="Surname"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/etSurname"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="ID Number"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etID"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="9406055089081" />

        <TextView
            android:layout_width="match_parent"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etUsername"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Email Addres"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="email@you.blah" />
        <TextView
            android:layout_width="match_parent"
            android:text="Phone Number"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etPhone"
            android:inputType="phone"
            android:layout_marginBottom="12dp"
            android:textSize="9pt"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="(+27) 82 456 7891" />

        <TextView
            android:layout_width="match_parent"
            android:text="Home Contact Number"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etHPhone"
            android:inputType="phone"
            android:layout_marginBottom="12dp"
            android:textSize="9pt"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:hint="(+27) 11 458 7891" />

        <TextView
            android:layout_width="match_parent"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="9pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="9pt"
            android:gravity="center"
            android:id="@+id/proceed"
            android:text="Please proceed to Skills Tab"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="Please proceed Locations"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>


</LinearLayout>
