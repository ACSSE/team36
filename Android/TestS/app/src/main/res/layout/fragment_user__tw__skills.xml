<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding ="10dp"
    android:orientation="vertical"
    tools:context="oasys.za.ac.uj.team36.tests.user_TW_Skills">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="9pt"
        android:text="Enter Your Skill Set"/>

    <EditText
        android:id="@+id/etSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="9pt"
        android:hint="Painting"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="9pt"
        android:gravity="center"
        android:text="Add another Skill?"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bRegisterTradeWorker"
        android:layout_width="match_parent"
        android:text="Sign Me Up"
        android:textColor="#000000"
        android:background="@color/colorPrimary"
        android:textSize="10pt"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content" />
</LinearLayout>
