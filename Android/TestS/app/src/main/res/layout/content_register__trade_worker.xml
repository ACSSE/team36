<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="oasys.za.ac.uj.team36.tests.Register_TradeWorker"
    tools:showIn="@layout/activity_register__trade_worker">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etName"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:enabled="true" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Surname"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etSurname"
                android:inputType="text"
                android:textColor="#e2ddd5"
                android:textSize="9pt"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:elegantTextHeight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="ID Number"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etID"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="8806055083082" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etUsername"
                android:inputType="text"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:textSize="9pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:enabled="true" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Email Addres"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etEmail"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:elegantTextHeight="true"
                 />


            <TextView
                android:layout_width="wrap_content"
                android:text="Phone Number"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etPhone"
                android:inputType="phone"
                android:layout_marginBottom="12dp"
                android:textSize="9pt"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:elegantTextHeight="true"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:text="Date of Birth"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/etAge"
                android:inputType="date"
                android:textSize="9pt"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:enabled="true" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Gender"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Male"

                android:id="@+id/rbMale" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Female"
                android:id="@+id/rbFemale" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="text"
                android:layout_marginBottom="12dp"
                android:textSize="9pt"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:elegantTextHeight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etWorkType"
                android:inputType="text"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:textSize="9pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:elegantTextHeight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="9pt"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:textSize="9pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:elegantTextHeight="true"
                 />

            <Button
                android:id="@+id/bRegister"
                android:layout_width="match_parent"
                android:text="Sign Me Up"
                android:textColor="#000000"
                android:background="#0080ff"
                android:textSize="10pt"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
